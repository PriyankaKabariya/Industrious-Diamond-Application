<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="20dp">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#112F78"
                android:textStyle="bold|italic"
                android:text="Already have an Account? " />


            <EditText
                android:id="@+id/txtemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_below="@id/txt1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="  Email"
                android:background="@drawable/border"
                android:textColor="#000000"
                android:textStyle="italic"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/black"
                android:drawableLeft="@drawable/ic_email"
                />


            <EditText
                android:id="@+id/txtpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_below="@id/txtemail"
                android:inputType="textPassword"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="  Password"
                android:textColor="#000000"
                android:textStyle="italic"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_pass"
                android:textColorHint="@color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password? "
                android:id="@+id/txtforgotpass"
                android:layout_below="@id/txtpassword"
                android:layout_marginTop="25dp"
                android:textColor="#112F78"
                android:layout_alignRight="@id/txtpassword"
                android:textSize="15dp"
                android:textStyle="bold|italic"/>

            <CheckBox
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me "
                android:id="@+id/chkme"
                android:layout_below="@id/txtpassword"
                android:textColor="#112F78"
                android:layout_alignLeft="@id/txtpassword"
                android:textSize="15dp"
                android:textStyle="bold|italic"/>

            <Button
                android:id="@+id/btnlogin"
                style="@style/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtforgotpass"
                android:text="Login"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/loginViewsMargin"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textColor="#112F78"
                android:layout_below="@id/btnlogin"
                android:textSize="15dp"
                android:id="@+id/txtregister"
                android:layout_centerHorizontal="true"
                android:text="New user? Register Now "
                android:layout_marginTop="25dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t5"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:text="------Use Other Methods------"
                android:textColor="@color/black"
                android:layout_below="@id/txtregister"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l1"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/t5">

                <ImageButton
                    android:id="@+id/imggoogle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/google" />

                <ImageButton
                    android:id="@+id/imgsnap"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/snapchat" />

                <ImageButton
                    android:id="@+id/imgfacebook"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/facebook" />

                <ImageButton
                    android:id="@+id/imgtwitter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/twitter" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ll1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_below="@id/l1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/t55"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="------Share Application to others------"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lll1"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ll1">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imgshare"
                    android:background="@drawable/ic_share" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>